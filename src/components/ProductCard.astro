---
const { productName, description, price, image } = Astro.props;
---

<div class="w-[320px] h-[550px]">
  <div class="image-container h-2/3 w-full">
    <img
      src={image}
      alt={productName}
      class="image-container h-full w-full object-fill"
    />
  </div>
  <div
    class="description-container gap-2 bg-secondary-100 h-1/3 w-full px-7 pt-4 flex flex-col"
  >
    <h1 class="text-white font-bold text-2xl">{productName}</h1>
    <p class="text-white text-lg">{description}</p>
    <button
      class="bg-white mt-4 w-full h-10 text-secondary-100 rounded-2xl hover:text-white hover:bg-primary"
    >
      <span>S/.{price}</span>
      <span>Agregar a Carrito</span>
    </button>
  </div>
</div>

<style>
  .image-container {
    border-radius: 18% 18% 0% 0%;
  }
  .description-container {
    border-radius: 0% 0% 18% 18%;
  }
</style>
