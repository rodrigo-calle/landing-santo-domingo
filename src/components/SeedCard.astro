---
const { seedName, image } = Astro.props;
---

<div class="relative w-64 h-64 border-8 border-white rounded-full">
  <img
    class="object-cover w-full h-full rounded-full"
    src={image}
    alt={seedName}
  />
  <div
    class="cursor-pointer seed-label w-56 absolute bottom-5 -right-1 bg-secondary-100 text-2xl font-bold p-2"
  >
    <p class="text-white">
      {seedName}
    </p>
  </div>
</div>

<style>
  .seed-label {
    border-radius: 17% 15% 15% 5%;
  }
</style>
